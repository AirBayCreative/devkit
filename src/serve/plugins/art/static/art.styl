.FolderCell {
	clear: both;
	position: relative;
}

.FolderCell #contents {
	display: none;
}

.FolderCell #header {
	clear: both;
	margin: 10px 0;
	padding: 5px;
	font-size: 16px;
	cursor: pointer;
	font-weight: normal;
}

.FolderCell #header:hover {
	background: rgba(230,230,230,0.4);
}

.FolderCell #header.down {
	font-weight: bold;
	background: rgba(80, 80, 200, 0.3)
}

.FolderCell #copy {
	position: absolute;
	top: -1px;
	right: 0;
}

.ImageCell { 
	width: 100px; 
	float: left; 
	margin: 3px; 
	padding: 5px;
	font-size: 10px; 
	word-wrap: break-word; 
	text-align: center;
	height: 120px;
	border: 1px solid #666;
	background: rgba(250,250,250,0.3);
	border-radius: 5px;
}

.ImageCell #preview { 
	width: 64px; 
	height: 64px; 
	display: block; 
	margin: 0 auto 5px auto;
}

#gitControls {
	height: 100px;
	right: 312px;
	left: 0;
	position: absolute;
	border-bottom: 2px solid #AAA;
	background: #EEE;
	padding: 5px 20px;
	display: none;
}

#gitControls h3 {
	margin: 0;
	padding: 0;
	font-size: 14px;
}

#gitControls #commitMessage {
	width: 100%;
}

#gitControls #responseMessage {
	padding-left: 10px;
}

#responseMessage.red { color: red }
#responseMessage.green { color: green }

#assetList { 
	padding: 10px; 
	position: absolute;
	left: 0;
	top: 100px;
	right: 300px;
}

#assetList div.container { display: none }

#assetControl {
	width: 300px;
	position: fixed;
	right: 12px;
	top: 0;
	bottom: 0;
	border-left: 2px solid #ccc;
	padding: 10px;
}

#ruleList {
	position: absolute;
	bottom: 0;
	height: 175px;
	left: 0;
	right: 0;
	border-top: 2px solid #ccc;
	padding: 10px;
	font-size: 14px;
	line-height: 30px;
}

#disabled {
	z-index: 10;
	background: rgba(255, 255, 255, 0.4);
	position: absolute;
	bottom: 0;
	height: 175px;
	left: 0;
	right: 0;
}

#ruleList h3 {
	margin: 0;
	padding: 0;
	font-size: 16px;
}

#ruleList label {
	display: block;
}

#ruleList input[type="number"] {
	height: 27px;
}

#ruleList #checkbox {
	width: 13px;
}

#ruleList div span.lbl {
	display: inline-block;
	width: 70px;
}

#ruleList label span {
	margin: 0 5px;
}

#ruleList input.width, #ruleList input.height {
	width: 30px;
}

#ruleList input.scale {
	width: 60px;
}

#ruleList button.emph {
	color: #e98080;
}

#resourceList {
	position: absolute;
	bottom: 175px;
	top: 40px;
	right: 0;
	left: 0;
}

#resourceList #label {
	margin: 0 10px;
	font-size: 12px;
}

#resourceList #cancel {
	padding: 0 5px;
	font-size: 12px;
	background: red;
	font-weight: normal;
	float: right;
	cursor: pointer;
}

.ResourceCell {
	padding: 2px 10px;
}

.ResourceCell:nth-child(odd) {
	background: #eee;
}

.ResourceCell label {
	cursor: pointer;
}

#targetGroup {
	padding: 10px;
	margin: -10px -10px 0 -10px;
	border-bottom: 2px solid #CCC;
}

#targetGroup span {
	font-size: 14px;
	text-shadow: 1px 1px 1px #ccc;
}